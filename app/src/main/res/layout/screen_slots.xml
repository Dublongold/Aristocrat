<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/main_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/screenTitleText"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_text_background"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:textSize="16sp"
        android:text="@string/slots_title_text"
        app:layout_constraintBottom_toBottomOf="@+id/backToMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backToMenu" />

    <ImageButton
        android:id="@+id/backToMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:contentDescription="@string/back_to_menu_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/go_back_button" />

    <include
        layout="@layout/game_elements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="320dp"
        android:layout_height="255dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/column_bg"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backToMenu">

        <LinearLayout
            android:id="@+id/gameColumn1"
            android:layout_width="69dp"
            android:layout_height="223dp"
            android:gravity="center"
            android:background="@drawable/column"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/slot1"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_01" />
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/slot2"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_02" />
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/slot3"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_03" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gameColumn2"
            android:layout_width="69dp"
            android:layout_height="223dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:background="@drawable/column"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/slot4"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_04" />
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/slot5"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_05" />
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/slot6"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_06" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gameColumn3"
            android:layout_width="69dp"
            android:layout_height="223dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:background="@drawable/column"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/slot7"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_07" />
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/slot8"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_08" />
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/slot9"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_09" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gameColumn4"
            android:layout_width="69dp"
            android:layout_height="223dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:background="@drawable/column"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/slot10"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_10" />
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/slot11"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_11" />
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>
            <ImageView
                android:id="@+id/slot12"
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:srcCompat="@drawable/slot_item_12" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>